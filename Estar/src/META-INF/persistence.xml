			<property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
			<property name="hibernate.connection.driver_class" value="com.microsoft.jdbc.sqlserver.SQLServerDriver"/>
			<property name="hibernate.connection.url" value="jdbc:microsoft:sqlserver://1E1;DatabaseName=test;SelectMethod=cursor"/>
		</properties>
	</persistence-unit>
</persistence>
